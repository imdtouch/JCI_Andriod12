<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navBar"
        android:layout_above="@+id/zoomBar" />

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="#CC000000"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Forward"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_next"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnAdmin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Admin"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings"
            android:tint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#E6000000"
        android:visibility="gone">

        <Button
            android:id="@+id/zoomResetButton"
            android:layout_width="75dp"
            android:layout_height="44dp"
            android:text="Reset"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/reset_button_background"
            android:layout_marginEnd="20dp"
            android:elevation="2dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:background="@drawable/zoom_indicator_background" />

        <SeekBar
            android:id="@+id/zoomSeekBar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:max="200"
            android:progress="20"
            android:thumb="@drawable/zoom_seekbar_thumb"
            android:progressDrawable="@drawable/zoom_seekbar_progress"
            android:background="@android:color/transparent"
            android:splitTrack="false"
            android:thumbOffset="0dp"
            android:layout_gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:background="@drawable/zoom_indicator_background" />

    </LinearLayout>

</RelativeLayout>


